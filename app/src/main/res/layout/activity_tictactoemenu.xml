<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/istockphoto915487006612x612"
    tools:context=".TicTacToeMenu">

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:text="Kółko i krzyżyk"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="40sp"
        android:id="@+id/name"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/et_p1"
        android:hint="Gracz 1"
        android:layout_below="@+id/name"
        android:layout_margin="5dp"
        android:text="Gracz 1"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/et_p2"
        android:hint="Gracz 2"
        android:layout_below="@+id/et_p1"
        android:layout_margin="5dp"
        android:text="Gracz 2"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/start"
        android:layout_below="@+id/et_p2"
        android:text="START"
        android:layout_height="wrap_content" />

</RelativeLayout>